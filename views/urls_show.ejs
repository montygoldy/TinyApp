  <% include partials/_head %>
  <% include partials/_header %>

  <!-- Portfolio Grid -->
    <section id="portfolio">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase" style="color:#fff;margin-bottom:0!important">SHORT LINK</h2>
            <h3 class="section-subheading text-muted" style="margin-bottom:36px!important">You can update or delete your short links</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-center-block" style="background:#fff;padding:20px 40px 40px 30px;">
            <div class="portfolio-caption" style="max-width:none!important">
              <h3 class="text-center"><%= shortURL %></h3>
              <p class="text-muted text-center" style="font-size:24px" ><span class="new_link" style="font-size:14px !important">Orignal Link: </span><%= longURL  %></p>

              <form id="contactForm" name="sentMessage" method="POST" action="/urls/<%= shortURL %>" novalidate>
              <div class="row">
                <div class="col-md-12 col-center-block text-center">
                  <div class="form-group">
                      <input type="text" name="longURL" placeholder="Update Link" style="padding:6px;">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3 col-center-block text-center">
                  <button id="sendMessageButton" class="btn btn-primary text-uppercase" type="submit" ><i class="fa fa-pencil" aria-hidden="true"></i> Update</button>

                </div>
                 </form>

                <div class="col-md-3 col-center-block text-center">
                  <form action="/urls">
                    <button id="sendMessageButton" class="btn btn-secondary text-uppercase" type="submit"><i class="fa fa-bars" aria-hidden="true"></i> URL INDEX</button>
                  </form>
                </div>

              </div>


            </div>


          </div>

        </div>
      </div>
    </section>




  <% include partials/_footer %>