  <% include partials/_head %>
  <% include partials/_header %>

  <!-- Contact -->
    <section id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center ">
            <h2 class="section-heading"><span class="welcome">WELCOME!!</span><br> Please Register to use the app</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 ">
            <form id="contactForm" name="sentMessage" method="POST" action="/register" novalidate>
              <div class="row">
                <div class="col-md-6 col-center-block text-center">
                  <div class="form-group">
                    <input type="email" name="email" placeholder="@email.com" required>
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">
                    <input type="password" name="password" placeholder="password" required >
                    <p class="help-block text-danger"></p>
                  </div>

                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit"><i class="fa fa-user-plus" aria-hidden="true"></i> Register</button>
                </div>
              </div>
            </form>
          </div>
        </div>
        </div>


      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center ">
            <p style="color:#fff;">Already registered? Please <a href="/login">SIGN IN</a></p>
          </div>
        </div>
      </div>
      </div>
    </section>

  <% include partials/_footer %>